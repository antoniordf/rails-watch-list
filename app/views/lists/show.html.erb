<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %>
      <%= link_to "Delete this bookmark",
          list_path(@list),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
<br>
<%= link_to "Return to lists", lists_path %>
